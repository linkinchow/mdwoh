{
	"name": "southridge_copy_data",
	"properties": {
		"activities": [
			{
				"name": "copy_cloudsales",
				"type": "ForEach",
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.cw_items",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "copy_data",
							"type": "Copy",
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"source": {
									"type": "SqlSource"
								},
								"sink": {
									"type": "AzureBlobFSSink"
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "southridge_cloudsales",
									"type": "DatasetReference",
									"parameters": {
										"cw_tableName": {
											"value": "@item().source.tableName",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "southridge_datalake",
									"type": "DatasetReference",
									"parameters": {
										"cw_fileName": {
											"value": "@item().destination.fileName",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"cw_items": {
				"type": "Array",
				"defaultValue": [
					{
						"source": {
							"tableName": "[dbo].[Addresses]"
						},
						"destination": {
							"fileName": "Addresses.csv"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[Customers]"
						},
						"destination": {
							"fileName": "Customers.csv"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[OrderDetails]"
						},
						"destination": {
							"fileName": "OrderDetails.csv"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[Orders]"
						},
						"destination": {
							"fileName": "Orders.csv"
						}
					}
				]
			}
		}
	}
}