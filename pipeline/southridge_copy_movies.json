{
	"name": "southridge_copy_movies",
	"properties": {
		"activities": [
			{
				"name": "copy_movies",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "DocumentDbCollectionSource",
						"nestingSeparator": "."
					},
					"sink": {
						"type": "AzureBlobFSSink"
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "southridge_movies",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "southridge_datalake",
						"type": "DatasetReference",
						"parameters": {
							"cw_fileName": "Movies.json",
							"cw_folder": "southridge/southridge/movies"
						}
					}
				]
			}
		]
	}
}