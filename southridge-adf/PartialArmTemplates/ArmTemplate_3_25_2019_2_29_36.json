								}
							]
						}
					}
				],
				"parameters": {
					"cw_items": {
						"type": "Array",
						"defaultValue": [
							{
								"source": {
									"tableName": "[concat('[', 'dbo].[Addresses]')]"
								},
								"destination": {
									"fileName": "Addresses.csv"
								}
							},
							{
								"source": {
									"tableName": "[concat('[', 'dbo].[Customers]')]"
								},
								"destination": {
									"fileName": "Customers.csv"
								}
							},
							{
								"source": {
									"tableName": "[concat('[', 'dbo].[Transactions]')]"
								},
								"destination": {
