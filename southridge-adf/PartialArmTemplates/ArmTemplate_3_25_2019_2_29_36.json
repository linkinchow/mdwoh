								}
							}
						]
					},
					"cw_folder": {
						"type": "String",
						"defaultValue": "southridge/southridge/cloudstreaming"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/southridge_cloudstreaming')]",
				"[concat(variables('factoryId'), '/datasets/southridge_datalake')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/southridge_copy_movies')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "copy_movies",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "DocumentDbCollectionSource",
								"nestingSeparator": "."
							},
							"sink": {
								"type": "AzureBlobFSSink"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "southridge_movies",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "southridge_datalake_movies",
								"type": "DatasetReference"
							}
						]
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/southridge_movies')]",
				"[concat(variables('factoryId'), '/datasets/southridge_datalake_movies')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/southridge_cloudstreaming')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "southridge_cloudstreaming",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"cw_tableName": {
						"type": "String"
					}
				},
				"type": "AzureSqlTable",
				"typeProperties": {
					"tableName": {
						"value": "@dataset().cw_tableName",
						"type": "Expression"
					}
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/southridge_datalake')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "southridge_datalake",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"cw_fileName": {
						"type": "String"
					},
					"cw_folder": {
						"type": "String"
					}
				},
				"type": "AzureBlobFSFile",
				"typeProperties": {
					"format": {
						"type": "TextFormat",
						"columnDelimiter": ",",
						"rowDelimiter": "",
						"nullValue": "\\N",
						"treatEmptyAsNull": true,
						"skipLineCount": 0,
						"firstRowAsHeader": true
					},
					"fileName": {
						"value": "@dataset().cw_fileName",
						"type": "Expression"
					},
					"folderPath": {
						"value": "@dataset().cw_folder",
						"type": "Expression"
					}
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/southridge_datalake_movies')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "southridge_datalake",
					"type": "LinkedServiceReference"
				},
				"type": "AzureBlobFSFile",
				"typeProperties": {
					"format": {
						"type": "JsonFormat",
						"filePattern": "arrayOfObjects"
					},
					"fileName": "Movies.json",
					"folderPath": "southridge/southridge/movies"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/southridge_movies')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "southridge_movies",
					"type": "LinkedServiceReference"
				},
				"type": "DocumentDbCollection",
				"typeProperties": {
					"collectionName": "movies"
				}
			}
		},
